---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import ContactForm from '../../components/ContactForm.astro';
import Footer from '../../components/Footer.astro';
import HarborIllustration from '../../components/HarborIllustration.astro';
---

<Layout
  title="The Harbor - Building ventures from Maresme"
  description="We build scalable products and advise on critical tech decisions. Strategy aligned with business: better time-to-market, less technical debt, metrics that matter."
  lang="en"
>
  <Header lang="en" />

  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-blue-50 to-white py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <div class="flex-1 text-center lg:text-left">
          <p class="text-[#1e3a5f] text-sm font-semibold tracking-wider mb-4">THE HARBOR</p>
          <h1 class="text-4xl md:text-6xl font-bold text-[#1e3a5f] mb-6 leading-tight">
            Building ventures from Maresme
          </h1>
          <p class="text-xl text-[#64748b] mb-8 leading-relaxed">
            We build scalable products and advise on critical tech decisions. Strategy aligned with business: better time-to-market, less technical debt, metrics that matter.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="#ventures" class="bg-[#3b82f6] hover:bg-[#2563eb] text-white font-semibold px-8 py-4 rounded-lg transition transform hover:-translate-y-1 shadow-lg">
              View Our Ventures
            </a>
            <a href="#contact" class="border-2 border-[#1e3a5f] text-[#1e3a5f] hover:bg-[#1e3a5f] hover:text-white font-semibold px-8 py-4 rounded-lg transition">
              Work With Us
            </a>
          </div>
        </div>
        <div class="flex-1 flex justify-center">
          <div class="w-full max-w-md h-96">
            <HarborIllustration />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Do Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-[#1e3a5f] mb-4">Two ways to work together</h2>
        <p class="text-xl text-[#64748b]">We build our own ventures and help others grow</p>
      </div>
      <div class="grid md:grid-cols-2 gap-8">
