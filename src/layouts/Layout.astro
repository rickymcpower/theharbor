---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  lang: 'es' | 'en' | 'ca';
}

const { title, description, lang } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, 'https://theharbor.digital').toString();
const ogImageURL = 'https://theharbor.digital/og-image.svg';

// Mapeo de idiomas a locales
const localeMap = {
  es: 'es_ES',
  en: 'en_US',
  ca: 'ca_ES'
};

// Schema.org Organization
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "The Harbor",
  "legalName": "The Harbor Digital",
  "url": "https://theharbor.digital",
  "logo": "https://theharbor.digital/logo.png",
  "description": description,
  "foundingDate": "2024",
  "founders": [{
    "@type": "Person",
    "name": "Ricard Martí Carrillo"
  }],
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Arenys de Mar",
    "addressRegion": "Barcelona",
    "addressCountry": "ES"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "email": "hello@theharbor.digital",
    "contactType": "customer service",
    "availableLanguage": ["Spanish", "English", "Catalan"]
  },
  "sameAs": [
    "https://www.linkedin.com/company/the-harbor-digital"
  ],
  "areaServed": {
    "@type": "Place",
    "name": "International"
  },
  "knowsAbout": ["Software Development", "CTO Advisory", "Tech Strategy", "Product Development", "Venture Building"]
};

// Schema.org WebSite
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "The Harbor",
  "description": "Venture builder y asesoría tecnológica desde Arenys de Mar, Barcelona",
  "url": "https://theharbor.digital",
  "inLanguage": [lang],
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://theharbor.digital/{lang}#contact"
    }
  }
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Hreflang tags for multilingual SEO -->
    <link rel="alternate" hreflang="es" href="https://theharbor.digital/es" />
    <link rel="alternate" hreflang="en" href="https://theharbor.digital/en" />
    <link rel="alternate" hreflang="ca" href="https://theharbor.digital/ca" />
    <link rel="alternate" hreflang="x-default" href="https://theharbor.digital/es" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:site_name" content="The Harbor" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={localeMap[lang]} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  </head>
  <body class="antialiased font-sans">
    <slot />
  </body>
</html>
