---
// Harbor illustration from Pencil design
---

<div class="relative w-full h-full flex items-center justify-center">
  <svg viewBox="0 0 500 500" class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
    <!-- Glow Background -->
    <defs>
      <radialGradient id="glowGradient" cx="50%" cy="50%" r="50%">
        <stop offset="0%" style="stop-color:#dbeafe;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#f0f9ff;stop-opacity:0" />
      </radialGradient>
    </defs>
    <ellipse cx="250" cy="250" rx="225" ry="225" fill="url(#glowGradient)" />

    <!-- Clouds -->
    <ellipse cx="60" cy="77" rx="40" ry="17.5" fill="#FFFFFF" opacity="0.8" />
    <ellipse cx="90" cy="65" rx="30" ry="15" fill="#FFFFFF" opacity="0.8" />
    <ellipse cx="415" cy="55" rx="35" ry="15" fill="#FFFFFF" opacity="0.7" />
    <ellipse cx="435" cy="43" rx="25" ry="12.5" fill="#FFFFFF" opacity="0.7" />

    <!-- Anchor Symbol (background) -->
    <text x="425" y="135" font-family="Inter" font-size="48" fill="#1e3a5f" opacity="0.3" text-anchor="middle">âš“</text>

    <!-- Water Waves -->
    <ellipse cx="250" cy="400" rx="200" ry="50" fill="#bfdbfe" opacity="0.5" />
    <ellipse cx="250" cy="420" rx="175" ry="40" fill="#93c5fd" opacity="0.4" />

    <!-- Harbor Pier -->
    <rect x="100" y="320" width="300" height="20" rx="4" fill="#1e3a5f" />

    <!-- Pier Posts -->
    <rect x="130" y="280" width="16" height="60" rx="2" fill="#1e3a5f" />
    <rect x="250" y="280" width="16" height="60" rx="2" fill="#1e3a5f" />
    <rect x="370" y="280" width="16" height="60" rx="2" fill="#1e3a5f" />

    <!-- Boat 1 (Left) -->
    <g transform="translate(100, 220)">
      <!-- Hull -->
      <rect x="3" y="28" width="48" height="22" rx="0" ry="0" fill="#3b82f6">
        <animate attributeName="y" values="28;25;28" dur="3s" repeatCount="indefinite" />
      </rect>
      <!-- Cabin -->
      <rect x="13" y="12" width="28" height="18" rx="3" ry="3" fill="#1e3a5f">
        <animate attributeName="y" values="12;9;12" dur="3s" repeatCount="indefinite" />
      </rect>
      <!-- Mast -->
      <rect x="26" y="-22" width="3" height="35" fill="#1e3a5f">
        <animate attributeName="y" values="-22;-25;-22" dur="3s" repeatCount="indefinite" />
      </rect>
      <!-- Flag -->
      <polygon points="29,-20 43,-15 29,-10" fill="#ef4444">
        <animate attributeName="points" values="29,-20 43,-15 29,-10;29,-23 43,-18 29,-13;29,-20 43,-15 29,-10" dur="3s" repeatCount="indefinite" />
      </polygon>
    </g>

    <!-- Boat 2 (Center - Larger with Sail) -->
    <g transform="translate(220, 180)">
      <!-- Hull -->
      <rect x="4" y="37" width="62" height="28" rx="0" ry="0" fill="#1e3a5f">
        <animate attributeName="y" values="37;34;37" dur="4s" repeatCount="indefinite" />
      </rect>
      <!-- Cabin -->
      <rect x="18" y="18" width="35" height="22" rx="4" ry="4" fill="#3b82f6">
        <animate attributeName="y" values="18;15;18" dur="4s" repeatCount="indefinite" />
      </rect>
      <!-- Mast -->
      <rect x="33" y="-30" width="4" height="50" fill="#1e3a5f">
        <animate attributeName="y" values="-30;-33;-30" dur="4s" repeatCount="indefinite" />
      </rect>
      <!-- Sail -->
      <polygon points="37,-26 65,-7 37,12" fill="#FFFFFF" stroke="#e5e7eb" stroke-width="1.5">
        <animate attributeName="points" values="37,-26 65,-7 37,12;37,-29 65,-10 37,9;37,-26 65,-7 37,12" dur="4s" repeatCount="indefinite" />
      </polygon>
    </g>

    <!-- Boat 3 (Right - Small) -->
    <g transform="translate(350, 250)">
      <!-- Hull -->
      <rect x="3" y="22" width="38" height="18" rx="0" ry="0" fill="#60a5fa">
        <animate attributeName="y" values="22;19;22" dur="3.5s" repeatCount="indefinite" />
      </rect>
      <!-- Cabin -->
      <rect x="11" y="10" width="22" height="14" rx="2" ry="2" fill="#1e3a5f">
        <animate attributeName="y" values="10;7;10" dur="3.5s" repeatCount="indefinite" />
      </rect>
      <!-- Mast -->
      <rect x="21" y="-16" width="2" height="28" fill="#1e3a5f">
        <animate attributeName="y" values="-16;-19;-16" dur="3.5s" repeatCount="indefinite" />
      </rect>
    </g>
  </svg>
</div>
