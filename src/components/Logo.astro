---
// Geometric Anchor Logo
interface Props {
  variant?: 'full' | 'icon';
  color?: 'light' | 'dark';
}

const { variant = 'full', color = 'dark' } = Astro.props;
const iconColor = color === 'light' ? '#FFFFFF' : '#3b82f6';
const textColor = color === 'light' ? '#FFFFFF' : '#1e3a5f';
---

{variant === 'full' ? (
  <div class="flex items-center gap-3">
    <!-- Geometric Anchor Icon -->
    <svg width="32" height="36" viewBox="0 0 40 44" xmlns="http://www.w3.org/2000/svg">
      <!-- Top horizontal line -->
      <rect x="0" y="0" width="40" height="4" rx="2" fill={iconColor} />
      <!-- Vertical line -->
      <rect x="18" y="0" width="4" height="38" rx="2" fill={iconColor} />
      <!-- Bottom hook circle -->
      <circle cx="20" cy="36" r="6" fill="none" stroke={iconColor} stroke-width="4" />
    </svg>

    <!-- Text -->
    <span class="text-xl font-bold tracking-wide" style={`color: ${textColor}`}>
      THE HARBOR
    </span>
  </div>
) : (
  <!-- Icon only -->
  <svg width="32" height="36" viewBox="0 0 40 44" xmlns="http://www.w3.org/2000/svg">
    <rect x="0" y="0" width="40" height="4" rx="2" fill={iconColor} />
    <rect x="18" y="0" width="4" height="38" rx="2" fill={iconColor} />
    <circle cx="20" cy="36" r="6" fill="none" stroke={iconColor} stroke-width="4" />
  </svg>
)}
